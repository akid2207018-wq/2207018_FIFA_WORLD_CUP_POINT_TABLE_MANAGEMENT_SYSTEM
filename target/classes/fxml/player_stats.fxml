<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.fifaworldcup.ui.PlayerStatsController" 
            prefWidth="900" prefHeight="650">
    
    <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" spacing="15" style="-fx-padding: 15;">
        
        <VBox alignment="CENTER" style="-fx-background-color: #2a5298; -fx-padding:20;">
            <Label style="-fx-font-size:28px; -fx-text-fill:white; -fx-font-weight:bold;" text="Player Statistics" />
            <Label style="-fx-text-fill:white;" text="Track player performance" />
        </VBox>
        
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 10;">
                <Label text="Player Management" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                
                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <Label text="Player Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPlayerName" promptText="Full name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="Jersey #:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtJerseyNumber" promptText="1-99" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                    
                    <Label text="Team:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cmbPlayerTeam" promptText="Select team" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"/>
                    
                    <Label text="Position:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <ComboBox fx:id="cmbPlayerPosition" promptText="Select position" GridPane.rowIndex="1" GridPane.columnIndex="3" maxWidth="Infinity"/>
                    
                    <Label text="Goals:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPlayerGoals" promptText="0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <Label text="Assists:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtPlayerAssists" promptText="0" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                </GridPane>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnAddPlayer" text="Add Player" onAction="#handleAddPlayer"
                            style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
                    <Button fx:id="btnUpdatePlayer" text="Update Player" onAction="#handleUpdatePlayer"
                            style="-fx-background-color: #FFD700;"/>
                    <Button fx:id="btnDeletePlayer" text="Delete Player" onAction="#handleDeletePlayer"
                            style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnRefresh" text="ðŸ”„ Refresh" onAction="#handleRefresh"/>
                </HBox>
                
                <Label fx:id="lblStatus" text="" style="-fx-text-fill: green;"/>
            </VBox>
            
            <HBox spacing="20" prefHeight="250">
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ¥‡ Top Scorers" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                    <TableView fx:id="tblTopScorers" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colScorerPosition" text="Rank" prefWidth="60"/>
                            <TableColumn fx:id="colScorerName" text="Player" prefWidth="150"/>
                            <TableColumn fx:id="colScorerTeam" text="Team" prefWidth="120"/>
                            <TableColumn fx:id="colGoals" text="Goals" prefWidth="70"/>
                        </columns>
                    </TableView>
                </VBox>
                
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="ðŸŽ¯ Top Assists" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                    <TableView fx:id="tblTopAssists" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colAssistPosition" text="Rank" prefWidth="60"/>
                            <TableColumn fx:id="colAssistName" text="Player" prefWidth="150"/>
                            <TableColumn fx:id="colAssistTeam" text="Team" prefWidth="120"/>
                            <TableColumn fx:id="colAssists" text="Assists" prefWidth="70"/>
                        </columns>
                    </TableView>
                </VBox>
            </HBox>
            
            <VBox VBox.vgrow="ALWAYS" spacing="10">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="All Players" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Filter by Team:"/>
                    <ComboBox fx:id="cmbFilterTeam" promptText="All Teams" onAction="#handleFilterChange" prefWidth="150"/>
                </HBox>
                
                <TableView fx:id="tblAllPlayers" VBox.vgrow="ALWAYS" onMouseClicked="#handlePlayerSelection">
                    <columns>
                        <TableColumn fx:id="colPlayerName" text="Player Name" prefWidth="180"/>
                        <TableColumn fx:id="colPlayerTeam" text="Team" prefWidth="150"/>
                        <TableColumn fx:id="colPlayerNumber" text="Number" prefWidth="80"/>
                        <TableColumn fx:id="colPlayerPosition" text="Position" prefWidth="120"/>
                        <TableColumn fx:id="colPlayerGoals" text="Goals" prefWidth="80"/>
                        <TableColumn fx:id="colPlayerAssists" text="Assists" prefWidth="80"/>
                        <TableColumn fx:id="colPlayerMatches" text="Matches" prefWidth="80"/>
                    </columns>
                </TableView>
            </VBox>
            
            <Button fx:id="btnBack" text="Back" onAction="#handleBack" style="-fx-background-color: #2a5298; -fx-text-fill: white;"/>
    </VBox>
</AnchorPane>
