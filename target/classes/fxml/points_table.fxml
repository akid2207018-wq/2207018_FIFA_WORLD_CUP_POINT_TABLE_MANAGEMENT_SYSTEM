<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fifaworldcup.ui.PointsTableController">
    
    <VBox spacing="15" style="-fx-padding: 15;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        
        <VBox alignment="CENTER" style="-fx-background-color: #2a5298; -fx-padding:20;">
            <Label style="-fx-font-size:28px; -fx-text-fill:white; -fx-font-weight:bold;" text="Points Table" />
            <Label style="-fx-text-fill:white;" text="View standings and rankings" />
        </VBox>
        
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 10;">
                <Label text="Select Group:" />
                <ComboBox fx:id="cmbSelectGroup" onAction="#handleGroupChange" prefWidth="120" promptText="Group A" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Button fx:id="btnDetermineQualifiers" onAction="#handleDetermineQualifiers" style="-fx-background-color: #FFD700;" text="Determine Top 2" />
                <Button fx:id="btnRefresh" onAction="#handleRefresh" text="ðŸ”„ Refresh" />
                <Button fx:id="btnExport" onAction="#handleExport" text="Export to JSON" />
            </HBox>
            
            <Label fx:id="lblGroupTitle" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1e3c72;" text="Group A Standings" />
            
            <HBox spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-border-radius: 5;">
                <Label style="-fx-font-size: 11px;" text="P = Played | W = Won | D = Drawn | L = Lost" />
                <Label style="-fx-font-size: 11px;" text="GF = Goals For | GA = Goals Against | GD = Goal Difference" />
                <Label style="-fx-font-size: 11px;" text="Pts = Points" />
            </HBox>
            
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <TableView fx:id="tblStandings" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPosition" prefWidth="60" text="Pos" />
                        <TableColumn fx:id="colTeamName" prefWidth="200" text="Team" />
                        <TableColumn fx:id="colPlayed" prefWidth="50" text="P" />
                        <TableColumn fx:id="colWon" prefWidth="50" text="W" />
                        <TableColumn fx:id="colDrawn" prefWidth="50" text="D" />
                        <TableColumn fx:id="colLost" prefWidth="50" text="L" />
                        <TableColumn fx:id="colGF" prefWidth="60" text="GF" />
                        <TableColumn fx:id="colGA" prefWidth="60" text="GA" />
                        <TableColumn fx:id="colGD" prefWidth="60" text="GD" />
                        <TableColumn fx:id="colPoints" prefWidth="70" text="Pts" />
                    </columns>
                </TableView>
            </VBox>
            
            <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" />
            
            <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: #2a5298; -fx-text-fill: white;" text="Back" />
    </VBox>
</AnchorPane>
