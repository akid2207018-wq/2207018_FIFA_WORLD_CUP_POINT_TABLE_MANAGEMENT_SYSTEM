<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fifaworldcup.ui.MatchResultsController">
    
    <VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" spacing="15" style="-fx-padding: 15;">
        
        <VBox alignment="CENTER" style="-fx-background-color: #2a5298; -fx-padding:20;">
            <Label style="-fx-font-size:28px; -fx-text-fill:white; -fx-font-weight:bold;" text="Match Results" />
            <Label style="-fx-text-fill:white;" text="Enter and update match scores" />
        </VBox>
        
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Enter Match Result" />
            
            <Label fx:id="lblSelectedMatch" style="-fx-font-size: 12px;" text="Select a match from the table below" />
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="100" />
                    <ColumnConstraints />
                </columnConstraints>
                
                <Label text="Team 1 Score:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtTeam1Score" prefWidth="100" promptText="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Team 2 Score:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtTeam2Score" prefWidth="100" promptText="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            
            <HBox spacing="10">
                <Button fx:id="btnUpdateResult" onAction="#handleUpdateResult" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Update Result" />
                <Button fx:id="btnClearResult" onAction="#handleClearResult" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Clear Result" />
                <Button fx:id="btnRefresh" onAction="#handleRefresh" text="Refresh" />
            </HBox>
            
            <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" />
        </VBox>
        
        <HBox spacing="10">
            <Label text="Filter:" />
            <ComboBox fx:id="cmbFilterStatus" onAction="#handleFilterChange" prefWidth="150" promptText="All Matches" />
        </HBox>
        
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Match List" />
            <TableView fx:id="tblMatches" onMouseClicked="#handleMatchSelection" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMatchNumber" prefWidth="80" text="Match #" />
                    <TableColumn fx:id="colGroup" prefWidth="70" text="Group" />
                    <TableColumn fx:id="colTeam1" prefWidth="180" text="Team 1" />
                    <TableColumn fx:id="colTeam1Score" prefWidth="70" text="Score" />
                    <TableColumn fx:id="colTeam2Score" prefWidth="70" text="Score" />
                    <TableColumn fx:id="colTeam2" prefWidth="180" text="Team 2" />
                    <TableColumn fx:id="colCompleted" prefWidth="90" text="Completed" />
                </columns>
            </TableView>
        </VBox>
        
        <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: #2a5298; -fx-text-fill: white;" text="Back" />
    </VBox>
</AnchorPane>
