<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.fifaworldcup.ui.MatchResultsController" 
            prefWidth="1100" prefHeight="700">

    <!-- Header -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-padding: 20;">
            <Label text="âš½ Match Results Entry" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label text="Enter and update match scores" style="-fx-text-fill: #FFD700;"/>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Result Entry Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 10;">
                <Label text="Enter Match Result" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                
                <Label fx:id="lblSelectedMatch" text="Select a match from the table below" 
                       style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                
                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <Label text="Home Score:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtHomeScore" promptText="0" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="100"/>
                    
                    <Label text="Away Score:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtAwayScore" promptText="0" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100"/>
                </GridPane>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnUpdateResult" text="Update Result" onAction="#handleUpdateResult"
                            style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
                    <Button fx:id="btnClearResult" text="Clear Result" onAction="#handleClearResult"
                            style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnRefresh" text="ðŸ”„ Refresh" onAction="#handleRefresh"/>
                </HBox>
                
                <Label fx:id="lblStatus" text="" style="-fx-text-fill: green;"/>
            </VBox>
            
            <!-- Filter Panel -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Filter:"/>
                <ComboBox fx:id="cmbFilterStatus" promptText="All Matches" onAction="#handleFilterChange" prefWidth="150"/>
            </HBox>
            
            <!-- Matches Table -->
            <VBox VBox.vgrow="ALWAYS" spacing="10">
                <Label text="Match List" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="tblMatches" VBox.vgrow="ALWAYS" onMouseClicked="#handleMatchSelection">
                    <columns>
                        <TableColumn fx:id="colMatchNumber" text="Match #" prefWidth="80"/>
                        <TableColumn fx:id="colGroup" text="Group" prefWidth="70"/>
                        <TableColumn fx:id="colHomeTeam" text="Home Team" prefWidth="180"/>
                        <TableColumn fx:id="colHomeScore" text="Score" prefWidth="70"/>
                        <TableColumn fx:id="colAwayScore" text="Score" prefWidth="70"/>
                        <TableColumn fx:id="colAwayTeam" text="Away Team" prefWidth="180"/>
                        <TableColumn fx:id="colCompleted" text="Completed" prefWidth="90"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
            <Button fx:id="btnBack" text="â† Back to Home" onAction="#handleBack"
                    style="-fx-background-color: #1e3c72; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>
