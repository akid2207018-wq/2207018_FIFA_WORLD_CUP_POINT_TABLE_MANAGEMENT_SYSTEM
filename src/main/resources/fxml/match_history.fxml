<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fifaworldcup.ui.MatchHistoryController">
    
    <VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" spacing="15" style="-fx-padding: 15;">
        
        <VBox alignment="CENTER" style="-fx-background-color: #2a5298; -fx-padding:20;">
            <Label style="-fx-font-size:28px; -fx-text-fill:white; -fx-font-weight:bold;" text="Match History" />
            <Label style="-fx-text-fill:white;" text="View past match results" />
        </VBox>
        
        <HBox spacing="10">
                <Label text="Filter by Stage:" />
                <ComboBox fx:id="cmbFilterStage" onAction="#handleFilterChange" prefWidth="150" promptText="All Stages" />
                
                <Label text="Filter by Team:" />
                <ComboBox fx:id="cmbFilterTeam" onAction="#handleFilterChange" prefWidth="180" promptText="All Teams" />
                
                <Button fx:id="btnClearFilters" onAction="#handleClearFilters" text="Clear Filters" />
                <Button fx:id="btnRefresh" onAction="#handleRefresh" text="Refresh" />
                <Button fx:id="btnExport" onAction="#handleExport" text="Export" />
            </HBox>
            
            <HBox spacing="20">
                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px;" text="Total Matches" />
                    <Label fx:id="lblTotalMatches" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="0" />
                </VBox>
                
                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px;" text="Completed Matches" />
                    <Label fx:id="lblCompletedMatches" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="0" />
                </VBox>
            </HBox>
            
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Match Results" />
                <TableView fx:id="tblMatchHistory" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMatchNumber" prefWidth="80" text="Match #" />
                        <TableColumn fx:id="colStage" prefWidth="100" text="Stage" />
                        <TableColumn fx:id="colGroup" prefWidth="70" text="Group" />
                        <TableColumn fx:id="colTeam1" prefWidth="180" text="Team 1" />
                        <TableColumn fx:id="colTeam1Score" prefWidth="70" text="Score" />
                        <TableColumn fx:id="colTeam2Score" prefWidth="70" text="Score" />
                        <TableColumn fx:id="colTeam2" prefWidth="180" text="Team 2" />
                        <TableColumn fx:id="colDate" prefWidth="150" text="Date" />
                    </columns>
                </TableView>
            </VBox>
            
            <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" />
            
            <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: #2a5298; -fx-text-fill: white;" text="Back" />
    </VBox>
</AnchorPane>
