<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.fifaworldcup.ui.MatchHistoryController" 
            prefWidth="1200" prefHeight="700">

    <!-- Header -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-padding: 20;">
            <Label text="ðŸ“Š Match History" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label text="View all past match results and statistics" style="-fx-text-fill: #FFD700;"/>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Control Panel -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 10;">
                <Label text="Filter by Stage:"/>
                <ComboBox fx:id="cmbFilterStage" promptText="All Stages" onAction="#handleFilterChange" prefWidth="150"/>
                
                <Label text="Filter by Team:"/>
                <ComboBox fx:id="cmbFilterTeam" promptText="All Teams" onAction="#handleFilterChange" prefWidth="180"/>
                
                <Button fx:id="btnClearFilters" text="Clear Filters" onAction="#handleClearFilters"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button fx:id="btnRefresh" text="ðŸ”„ Refresh" onAction="#handleRefresh"/>
                <Button fx:id="btnExport" text="Export to JSON" onAction="#handleExport"/>
            </HBox>
            
            <!-- Statistics Panel -->
            <HBox spacing="30" alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-radius: 8;">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Total Matches" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                    <Label fx:id="lblTotalMatches" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                </VBox>
                
                <Separator orientation="VERTICAL"/>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Completed Matches" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                    <Label fx:id="lblCompletedMatches" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                </VBox>
            </HBox>
            
            <!-- Match History Table -->
            <VBox VBox.vgrow="ALWAYS" spacing="10">
                <Label text="Match Results" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="tblMatchHistory" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMatchNumber" text="Match #" prefWidth="80"/>
                        <TableColumn fx:id="colStage" text="Stage" prefWidth="100"/>
                        <TableColumn fx:id="colGroup" text="Group" prefWidth="70"/>
                        <TableColumn fx:id="colHomeTeam" text="Home Team" prefWidth="180"/>
                        <TableColumn fx:id="colHomeScore" text="Score" prefWidth="70"/>
                        <TableColumn fx:id="colAwayScore" text="Score" prefWidth="70"/>
                        <TableColumn fx:id="colAwayTeam" text="Away Team" prefWidth="180"/>
                        <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
            
            <Label fx:id="lblStatus" text="" style="-fx-text-fill: green;"/>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
            <Button fx:id="btnBack" text="â† Back to Home" onAction="#handleBack"
                    style="-fx-background-color: #1e3c72; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>
