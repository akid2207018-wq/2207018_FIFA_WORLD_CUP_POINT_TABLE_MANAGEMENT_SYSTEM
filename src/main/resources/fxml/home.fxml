<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fifaworldcup.ui.HomeController">
    
    <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        
        <VBox alignment="CENTER" style="-fx-background-color: #2a5298; -fx-padding:20;">
            <Label style="-fx-font-size:28px; -fx-text-fill:white; -fx-font-weight:bold;" text="âš½FIFA WORLD CUP" />
            <Label style="-fx-text-fill:white;" text="Management System" />
        </VBox>
        
        <ScrollPane fitToWidth="true">
            <content>
                <VBox spacing="30" style="-fx-padding: 20;">
                    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-padding: 25;">
                        <Label style="-fx-font-size:20px; -fx-font-weight:bold; -fx-text-fill:#1e3c72;" text="Welcome to FIFA World Cup Management System" />
                        <Label text="Manage team registration, schedule matches, track real-time points, and generate tournament brackets. This system provides a complete solution for organizing and managing FIFA World Cup tournaments." wrapText="true" />
                    </VBox>

                    <VBox spacing="12">
                        <Label style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#1e3c72;" text="Core Features" />
                        <HBox spacing="12">
                            <VBox style="-fx-background-color:#ffffff; -fx-border-color:#2a5298; -fx-border-radius:8; -fx-padding:12; -fx-pref-width:220;">
                                <Button fx:id="btnTeamRegistration" maxWidth="Infinity" onAction="#handleTeamRegistration" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-text-fill: white;" text="Team Registration" />
                                <Label text="Register teams with codes and flags" wrapText="true" />
                            </VBox>
                            <VBox style="-fx-background-color:#ffffff; -fx-border-color:#2a5298; -fx-border-radius:8; -fx-padding:12; -fx-pref-width:220;">
                                <Button fx:id="btnGroupFormation" maxWidth="Infinity" onAction="#handleGroupFormation" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-text-fill: white;" text="Group Formation" />
                                <Label text="Organize teams into World Cup groups" wrapText="true" />
                            </VBox>
                            <VBox style="-fx-background-color:#ffffff; -fx-border-color:#2a5298; -fx-border-radius:8; -fx-padding:12; -fx-pref-width:220;">
                                <Button fx:id="btnMatchScheduling" maxWidth="Infinity" onAction="#handleMatchScheduling" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-text-fill: white;" text="Match Scheduling" />
                                <Label text="Generate group-stage fixtures" wrapText="true" />
                            </VBox>
                        </HBox>

                        <HBox spacing="12">
                            <VBox style="-fx-background-color:#ffffff; -fx-border-color:#2a5298; -fx-border-radius:8; -fx-padding:12; -fx-pref-width:220;">
                                <Button fx:id="btnMatchResults" maxWidth="Infinity" onAction="#handleMatchResults" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-text-fill: white;" text="Match Results" />
                                <Label text="Enter and update match scores" wrapText="true" />
                            </VBox>
                            <VBox style="-fx-background-color:#ffffff; -fx-border-color:#2a5298; -fx-border-radius:8; -fx-padding:12; -fx-pref-width:220;">
                                <Button fx:id="btnPointsTable" maxWidth="Infinity" onAction="#handlePointsTable" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-text-fill: white;" text="Points Table" />
                                <Label text="View real-time standings &amp; rankings" wrapText="true" />
                            </VBox>
                            <VBox style="-fx-background-color:#ffffff; -fx-border-color:#2a5298; -fx-border-radius:8; -fx-padding:12; -fx-pref-width:220;">
                                <Button fx:id="btnKnockoutBracket" maxWidth="Infinity" onAction="#handleKnockoutBracket" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-text-fill: white;" text="Knockout Bracket" />
                                <Label text="View Round of 16 to Finals" wrapText="true" />
                            </VBox>
                        </HBox>

                        <HBox spacing="12">
                            <VBox style="-fx-background-color:#ffffff; -fx-border-color:#2a5298; -fx-border-radius:8; -fx-padding:12; -fx-pref-width:220;">
                                <Button fx:id="btnMatchHistory" maxWidth="Infinity" onAction="#handleMatchHistory" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298); -fx-text-fill: white;" text="Match History" />
                                <Label text="View all past match results" wrapText="true" />
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
        
        <HBox alignment="CENTER" style="-fx-background-color:#2a5298; -fx-padding:10;">
            <Label style="-fx-text-fill:white;" text="FIFA World Cup System 2025" />
        </HBox>
        
    </VBox>
</AnchorPane>
