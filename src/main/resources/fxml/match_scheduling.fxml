<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fifaworldcup.ui.MatchSchedulingController">
<content>
<AnchorPane prefHeight="650" prefWidth="900">
    
    <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" spacing="15" style="-fx-padding: 15;">
        
        <VBox alignment="CENTER" style="-fx-background-color: #2a5298; -fx-padding:20;">
            <Label style="-fx-font-size:28px; -fx-text-fill:white; -fx-font-weight:bold;" text="Match Scheduling" />
            <Label style="-fx-text-fill:white;" text="Generate and view fixtures" />
        </VBox>
        
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 10;">
                <Label text="Filter by Group:" />
                <ComboBox fx:id="cmbFilterGroup" onAction="#handleFilterChange" prefWidth="150" promptText="All Groups" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Button fx:id="btnImportFromAPI" onAction="#handleImportFromAPI" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="â¬‡ Import from API" />
                <Button fx:id="btnImportSchedule" onAction="#handleImportSchedule" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" text="Import JSON" />
                <Button fx:id="btnClearSchedule" onAction="#handleClearSchedule" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Clear Schedule" />
                <Button fx:id="btnExportSchedule" onAction="#handleExportSchedule" text="Export to JSON" />
                <Button fx:id="btnRefresh" onAction="#handleRefresh" text="ðŸ”„ Refresh" />
            </HBox>
            
            <HBox alignment="CENTER" spacing="30" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-radius: 8;">
                <VBox alignment="CENTER" spacing="5">
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="Total Matches" />
                    <Label fx:id="lblTotalMatches" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e3c72;" text="0" />
                </VBox>
            </HBox>
            
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Match Schedule" />
                <TableView fx:id="tblMatches" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMatchNumber" prefWidth="70" text="Match #" />
                        <TableColumn fx:id="colGroup" prefWidth="65" text="Group" />
                        <TableColumn fx:id="colTeam1" prefWidth="160" text="Team 1" />
                        <TableColumn fx:id="colTeam2" prefWidth="160" text="Team 2" />
                        <TableColumn fx:id="colMatchDate" prefWidth="150" text="Match Date" />
                        <TableColumn fx:id="colStage" prefWidth="100" text="Stage" />
                        <TableColumn fx:id="colStatus" prefWidth="85" text="Status" />
                    </columns>
                </TableView>
            </VBox>
            
            <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" />
            
            <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: #2a5298; -fx-text-fill: white;" text="Back" />
    </VBox>
</AnchorPane>
</content>
</ScrollPane>
